<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous">
        <link rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
        <title>BIHAR CHAT</title>
        <link rel="stylesheet" href="style.css">
    </head>
    <body>
        <div class="app">
            <div class="container">
                <div class="row">

                    <div class="col-md-3 mx-auto my-5">
                        <div class="card" style="height: 590px;">
                            <div class="text-center card-header">
                                MES AMIS
                            </div>
                            <div class="list-group">
                                <div class="conteneur">
                                    <img src="groupe.png" alt="" width="50px">
                                    <button type="button"
                                        class="list-group-item list-group-item-action"
                                        id="groupe"
                                        value="groupe"
                                        onclick="envoyerGroupe()">
                                        Mon groupe
                                    </button>
                                </div>
                                <% user.forEach(user => { %>
                                <div class="conteneur">
                                    <img src="avatar-homme.png" alt="" width="50px">
                                    <button type="button"
                                        class="list-group-item list-group-item-action boutonPrivee"
                                        id="<%= user.pseudo %>"
                                        value="<%= user.pseudo %>"
                                        onclick="envoyerID('<%= user.pseudo %>')">
                                        <%= user.pseudo %>
                                    </button>
                                </div>
                                <% }) %>
                            </div>
                            <div>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mx-auto my-5">
                        <div class="card" style="height: 590px;">
                            <div class="text-center card-header">
                                BIHAR CHAT
                            </div>
                            <div class="card-body msgContainer"
                                id="msgContainer">

                            </div>
                            <div>
                                <div id="isWritting"></div>
                                <form action method="post" id="chatForm"
                                    class="input-group mb-3 formulaire">
                                    <input type="text" class="form-control"
                                        placeholder="Ecrire un message"
                                        aria-label="Recipient's username"
                                        aria-describedby="btnSend"
                                        id="msgInput"
                                        autofocus onkeypress="writting()"
                                        onblur="notWritting()">
                                    <button class="btn btn-primary"
                                        type="submit" id="btnSend"
                                        value="Envoyer"><svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="16" height="16"
                                            fill="currentColor"
                                            class="bi bi-send"
                                            viewBox="0 0 16 16">
                                            <path
                                                d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z" />
                                        </svg>
                                    </button>
                                    <button class="btn btn-primary"
                                        type="submit">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="16" height="16"
                                            fill="currentColor"
                                            class="bi bi-images"
                                            viewBox="0 0 16 16">
                                            <path
                                                d="M4.502 9a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3" />
                                            <path
                                                d="M14.002 13a2 2 0 0 1-2 2h-10a2 2 0 0 1-2-2V5A2 2 0 0 1 2 3a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v8a2 2 0 0 1-1.998 2M14 2H4a1 1 0 0 0-1 1h9.002a2 2 0 0 1 2 2v7A1 1 0 0 0 15 11V3a1 1 0 0 0-1-1M2.002 4a1 1 0 0 0-1 1v8l2.646-2.354a.5.5 0 0 1 .63-.062l2.66 1.773 3.71-3.71a.5.5 0 0 1 .577-.094l1.777 1.947V5a1 1 0 0 0-1-1h-10" />
                                        </svg>
                                    </button>
                                    <button class="btn btn-primary"
                                        type="submit">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="16" height="16"
                                            fill="currentColor"
                                            class="bi bi-mic-fill"
                                            viewBox="0 0 16 16">
                                            <path
                                                d="M5 3a3 3 0 0 1 6 0v5a3 3 0 0 1-6 0z" />
                                            <path
                                                d="M3.5 6.5A.5.5 0 0 1 4 7v1a4 4 0 0 0 8 0V7a.5.5 0 0 1 1 0v1a5 5 0 0 1-4.5 4.975V15h3a.5.5 0 0 1 0 1h-7a.5.5 0 0 1 0-1h3v-2.025A5 5 0 0 1 3 8V7a.5.5 0 0 1 .5-.5" />
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 mx-auto my-5">
                        <div class="card" style="height: 590px;">
                            <div class="text-center card-header">
                                NOTIFICATIONS
                            </div>
                            <div class="card-body notification"
                                id="notification">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="/socket.io/socket.io.js"></script>
        <script src="chat.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    </body>
</html>